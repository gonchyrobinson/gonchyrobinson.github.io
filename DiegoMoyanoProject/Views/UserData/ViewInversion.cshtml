@model DiegoMoyanoProject.ViewModels.UserData.ViewInversionViewModel;

<div class="container">
    <div class="row ">
        <div class="col-xl-6 col-lg-6">
            <div class="card l-bg-cherry">
                <div class="card-statistic-3 p-4">
                    <div class="mb-4">
                        <h5 class="card-title mb-0">Capital invertido</h5>
                    </div>
                    <div class="row align-items-center mb-2 d-flex">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center mb-0">
                                @Model.CapitalInvested
                            </h2>
                        </div>
                        @*<div class="col-4 text-right">
                        <span>12.5% <i class="bi bi-cash"></i></span>
                        </div>*@
                    </div>
                    <div class="progress mt-1 " data-height="8" style="height: 8px;">
                        <div class="progress-bar l-bg-cyan" role="progressbar" data-width="25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6">
            <div class="card l-bg-blue-dark">
                <div class="card-statistic-3 p-4">
                    <div class="mb-4">
                        <h5 class="card-title mb-0">Rentabilidad</h5>
                    </div>
                    <div class="row align-items-center mb-2 d-flex">
                        <div class="col-8">
                            <h2 class="d-flex align-items-center mb-0">
                                @Model.Rentability
                            </h2>
                        </div>
                        @*<div class="col-4 text-right">
                        <span>9.23% <i class="fas fa-money-bill"></i></span>
                        </div>*@
                    </div>
                    <div class="progress mt-1 " data-height="8" style="height: 8px;">
                        <div class="progress-bar l-bg-green" role="progressbar" data-width="25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;"></div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.IsLoguedUser && !Model.IsAdminOrOwner)
        {
            <div class=" container row text-center d-flex justify-content-center">
                <a class="btn btn-outline-primary btn-lg px-5 py-3 fs-6 fw-bolder col col-sm-12 col-md-5 col-lg-5 m-2" asp-controller="Email" asp-action="Retirar" asp-route-CapitalInvested="@Model.CapitalInvested">Retirar Dinero</a>
                <a class="btn btn-outline-primary btn-lg px-5 py-3 fs-6 fw-bolder col col-sm-12 col-md-5 col-lg-5 m-2" asp-controller="Email" asp-action="Invertir" asp-route-CapitalInvested="@Model.CapitalInvested"> Invertir Dinero</a>
            </div>
        }
    </div>
</div>