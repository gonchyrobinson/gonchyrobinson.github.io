                <div class="bg-white p-4 p-md-5 rounded shadow-sm">
                    <div class="row">
                        <div class="col-12">
                            <div class="text-center mb-5">
                                <a asp-controller="Home" asp-action="Index">
                                    <img src="~/img/User/LogoBlueCheetah.jpeg" alt="Logo Blue Cheetah" class="mt-2 ms-2 img-fluid rounded" style="max-width:230px">
                                </a>
                            </div>
                        </div>
                    </div>
                    <form asp-controller="User" asp-action="UpdateUser">
                        <div class="row gy-3 gy-md-4 overflow-hidden">
                            <div class="col-12">
                                <label asp-for="@Model.Mail" class="form-label">Email<span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" class="form-control" id="email" placeholder="Correo electrónico" asp-for="@Model.Mail" required>
                                </div>
                                <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="@Model.Username" class="form-label">Nombre de Usuario <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-user" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" class="form-control" id="username" placeholder="Nombre de Usuario" asp-for="@Model.Username">
                                </div>
                                <span asp-validation-for="@Model.Username" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="@Model.Pass" class="form-label">Password <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    </span>
                                    <input type="password" class="form-control" id="password" asp-for="@Model.Pass">
                                </div>
                                <span asp-validation-for="@Model.Pass" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg" type="submit">Modificar</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}