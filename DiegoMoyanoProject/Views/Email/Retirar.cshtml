@{
    ViewData["Title"] = "Home Page";
}
@using DiegoMoyanoProject.ViewModels.Mail
@model RetirarEmailViewModel
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class="card-body p-4 p-sm-5">
                    @* <h5 class="card-title text-center mb-5 fw-light fs-5 text-gradient ">Sign In</h5> *@
                    <h5 class="display-6 fw-bolder mb-0 text-center"><span class="text-gradient d-inline">Retiro de Dinero de @Model.Name</span></h5>
                    <form asp-controller="Email" asp-action="Retirar">
                        <div class="col-md-4 col-10 pt-2">
                            <img class="mt-2 ms-2 img-fluid rounded" style="max-width:230px" src="~/img/Home/LogoBlueCheetah.jpeg" alt="Blue Cheetah">
                        </div>
                        <p class="display-7 fw-bolder mb-5 text-center"> Capital Disponible: $@Model.CapitalInvested</p>
                        <div class="form-floating mb-3">
                            <input asp-for="@Model.Money" type="number" class="form-control" id="floatingInput" max="@Model.CapitalInvested">
                            <label for="floatingInput" asp-for="@Model.Money"></label>
                            <span asp-validation-for="@Model.Money" class="mt-1 text-danger"></span>
                        </div>
                        <input hidden asp-for="@Model.Mail">
                        <input hidden asp-for="@Model.Name">
                        <div class="d-grid">
                            <button class="btn btn-primary btn-login text-uppercase fw-bold" type="submit">
                                Enviar
                            </button>
                        </div>
                        <hr class="my-4">

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

